<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7D7E7D"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="400dp"
        android:layout_height="72dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/anton"
        android:text="How do you draw faces?"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/arapey_italic"
        android:text="1)Start with a circle.Draw a large circle and make a horizontal line below it for the chin."
        android:textColor="@android:color/black"
        android:textSize="21dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arapey_italic"
        android:text="2)Draw guidelines on the face."
        android:textColor="@android:color/black"
        android:textSize="21dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arapey_italic"
        android:text="3)Draw eyes in the right spot,Draw a proportionate nose and Add the eyebrows."
        android:textColor="@android:color/black"
        android:textSize="21dp"
        android:textStyle="normal|bold|italic" />


    <TextView
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arapey_italic"
        android:text="4)Use a triangle shape to draw lips."
        android:textColor="@android:color/black"
        android:textSize="21dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/editText6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arapey_italic"
        android:text="5)Add the ears and Draw the hair."
        android:textColor="@android:color/black"
        android:textSize="21dp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="wait a minutes"
        android:textSize="20dp" />


</LinearLayout>